# Ollama endpoint (local by default)
OLLAMA_HOST=http://127.0.0.1:11434

# Ollama model (must support tool-calling, e.g. llama3.1:8b)
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TEMPERATURE=0.3

# Optional: tweak report folder
REPORT_DIR=data/reports

# Telegram bot token (get one from @BotFather)
TELEGRAM_BOT_TOKEN=

# Optional: comma-separated Telegram chat IDs that may use the bot.
# Leave blank to allow everyone.
TELEGRAM_ALLOWED_CHAT_IDS=
